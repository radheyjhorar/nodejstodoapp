
<div class="add-task-container">
  <div class="add-task-btn">
    <div onclick="showInputs()">
      <span>+</span>
      <span>Add New Task</span>
    </div>
  </div>

  <div class="add-task-input">
    <form action="/" method="post" onsubmit="validateForm(event)" id="AddTask" name="AddTask">
      <div>
        <input type="text" name="title" id="title" placeholder="Add title" />
        <textarea name="description" id="description" placeholder="Add Description" rows="4"></textarea>
      </div>
      <button type="submit">Add Task</button>
    </form>
  </div>
</div>